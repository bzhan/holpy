{
    "content": [
        {
            "type": "header",
            "name": "Common integrals",
            "level": 1
        },
        {
            "type": "axiom",
            "expr": "(INT x. c) = c * x + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. x ^ (-1)) = log(abs(x)) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. x ^ n) = x ^ (n + 1) / (n + 1) + C",
            "conds": [
                "n != -1"
            ]
        },
        {
            "type": "axiom",
            "expr": "(INT x. exp(x)) = exp(x) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. sin(x)) = -cos(x) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. cos(x)) = sin(x) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. 1 / (x^2 + 1)) = atan(x) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. sec(x)^2) = tan(x) + C"
        },
        {
            "type": "axiom",
            "expr": "(INT x. csc(x)^2) = -cot(x) + C"
        },
        {
            "type": "header",
            "name": "Common series expansion",
            "level": 1
        },
        {
            "type": "axiom",
            "expr": "exp(x) = SUM(n, 0, oo, x ^ n / factorial(n))"
        },
        {
            "type": "axiom",
            "expr": "sin(x) = SUM(n, 0, oo, (-1)^n * x^(2*n+1) / factorial(2*n+1))"
        },
        {
            "type": "axiom",
            "expr": "cos(x) = SUM(n, 0, oo, (-1)^n * x^(2*n) / factorial(2*n))"
        },
        {
            "type": "axiom",
            "expr": "atan(x) = SUM(n, 0, oo, (-1)^n * x^(2*n+1) / (2*n+1))",
            "conds": [
                "abs(x) <= 1"
            ]
        },
        {
            "type": "axiom",
            "expr": "(1 + x) ^ -1 = SUM(n, 0, oo, (-1)^n * x ^ n)",
            "conds": [
                "abs(x) < 1"
            ]
        },
        {
            "type": "axiom",
            "expr": "log(1 + x) = SUM(n, 0, oo, (-1)^n * x ^ (n+1) / (n + 1))",
            "conds": [
                "x > -1",
                "x <= 1"
            ]
        },
        {
            "type": "axiom",
            "expr": "log(1 - x) = SUM(n, 0, oo, (-1)^n * (-x)^(n+1) / (n + 1))",
            "conds": [
                "x >= -1",
                "x < 1"
            ]
        },
        {
            "type": "header",
            "name": "Common derived integrals",
            "level": 1
        },
        {
            "type": "problem",
            "expr": "(INT x. 1 / (x + a)) = log(abs(x + a)) + C",
            "path": "standard"
        },
        {
            "type": "problem",
            "expr": "(INT x. exp(a * x)) = a ^ (-1) * exp(a * x) + C",
            "path": "standard"
        },
        {
            "type": "problem",
            "expr": "(INT x. sin(a * x)) = - (a ^ (-1) * cos(a * x)) + C",
            "path": "standard"
        },
        {
            "type": "problem",
            "expr": "(INT x. cos(a * x)) = a ^ (-1) * sin(a * x) + C",
            "path": "standard"
        },
        {
            "type": "problem",
            "expr": "(INT x. 1 / (a ^ 2 + x ^ 2)) = a ^ (-1) * atan(x / a) + C",
            "conds": [
                "a != 0"
            ],
            "path": "standard"
        }
    ],
    "name": "Base theory"
}